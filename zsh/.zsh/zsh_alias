# Use the wrapper function in aliases
alias llmc="llm -c"  # For conversation mode
alias llme="llm -t english"  # Translate to English
# Example aliases
alias ls="lsd -alh"
alias cl="clear"
alias nv="nvim"
alias vim="nvim"
alias lg="lazygit"
alias ping="ping -c5"
alias copyfile="xsel --clipboard <"
