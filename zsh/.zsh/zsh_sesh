function sesh-sessions() {
  {
    exec </dev/tty
    exec <&1
    local session
    session=$(sesh list -t -c | fzf --height 40% --reverse --border-label ' sesh ' --border --prompt 'âš¡ Sessions: ')
    zle reset-prompt > /dev/null 2>&1 || true
    [[ -z "$session" ]] && return
    sesh connect $session
  }
}
zle     -N             sesh-sessions
# bindkey -r '\es' # Esto desvincula Esc + s
bindkey -M emacs '^Ss' sesh-sessions
bindkey -M emacs '^Ss' sesh-sessions
bindkey -M vicmd '^Ss' sesh-sessions
